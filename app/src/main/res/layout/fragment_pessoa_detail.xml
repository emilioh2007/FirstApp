<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PessoaFragment"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="-85dp"
    tools:layout_editor_absoluteY="-90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ExibeNomes">

        <TextView
            android:id="@+id/lblNomeDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome: "
            android:textSize="24sp" />
        <TextView
            android:id="@+id/textNomeDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emílio"
            android:textSize="24sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ExibeIdades">

        <TextView
            android:id="@+id/lblAnoDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idade: "
            android:inputType="date"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/textAnoDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17"
            android:inputType="date"
            android:textSize="24sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ExibeFaixaEtaria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faixa Etaria: "
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textFaixaEtariaDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adolecente"
            android:textSize="24sp" />


    </LinearLayout>




    <LinearLayout
        android:id="@+id/lblIcsGenero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblSexoDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genêro:"
            android:inputType="date"
            android:textSize="24sp"
            android:orientation="horizontal"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/ic_Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_male"
            android:layout_gravity="end"
            app:tint="#0A44F0"
            app:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/ic_Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_female"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ic_Male"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:tint="#EB0CE7" />

    </LinearLayout>




</LinearLayout>